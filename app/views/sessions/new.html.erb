<h2>Sign in</h2>
<%= form_with(url: login_path, local: true) do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>
  <div class="form-group">
    <%= label_tag 'Email' %>
    <%= email_field_tag 'session[email]', nil, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= label_tag 'Password' %>
    <%= password_field_tag 'session[password]', nil, class: 'form-control', required: true %>
  </div>
  <%= submit_tag 'Sign in', class: 'btn btn-primary' %>
<% end %>